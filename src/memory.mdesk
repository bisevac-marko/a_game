MemoryArena :: struct
{
    used: sizet,
    size: sizet,
    base: *u8,
    temp_arena_count: u32,
}

TemporaryArena :: struct
{
    arena: *MemoryArena,
    used: sizet,
}

MemoryTask :: struct
{
    arena: MemoryArena,
    temp_memory: TemporaryArena,
    is_used: b8,
}

TaskQueue :: struct
{
    tasks: *MemoryTask,
    count: u32,
}